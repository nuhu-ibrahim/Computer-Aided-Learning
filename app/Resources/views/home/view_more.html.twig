{% extends 'home.html.twig' %}

{% block body %}
    <!-- Title -->
    <div class="col-md-10 col-lg-offset-1">
        
        <h1>{{property.getPropertyTitle}}</h1>

        <!-- Author -->
        <p class="lead">
            
        </p>
        
        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Posted on {{property.getDateUploaded.format("M d, Y \\a\\t H : i A")}}</p>
        <hr>
        
        {% for attach in attachs %}
            <!-- Preview Image -->
            <img class="img-responsive" src="{{asset(["uploads/",attach.getAttachment]|join)}}" alt="">

            <hr>

            <!-- Post Content -->
            <p class="lead">{{attach.getAttachmentDesc}}</p>

        {% endfor %}
    </div>
    <!-- Side Widget Well -->
    
{% endblock %}